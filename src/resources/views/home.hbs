<div class="mt-1 mb-5 p-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4 courses-item">
        <div class="card course-card-item">
          <a href="/courses/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top card-img-top-edit"
              alt="..."
            />
          </a>
          <div class="card-body card-body-edit">
            <a href="/courses/{{this.slug}}">
              <h5 class="card-title course-card-item-title">{{this.name}}</h5>
            </a>
            <p
              class="card-text course-card-item-height"
            >{{this.description}}</p>
            <a href="#" class="btn btn-primary btn-edit">Mua khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>